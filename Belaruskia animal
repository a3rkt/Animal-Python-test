class Animals:

    def make_sound(self):
        print(f'{self.pet} {self.name} {self.sound}')
        return


class Dog(Animals):

    def __init__(self, name, age, pet='Пёс', sound='бреша'):
        self.name = name
        self.age = age
        self.pet = pet
        self.sound = sound


class Cat(Animals):

    def __init__(self, name, age, pet='Кот', sound='мыу мыу'):
        self.name = name
        self.age = age
        self.pet = pet
        self.sound = sound


barsik = Cat('Барсик', 10)
timosha = Cat('Тимоша', 5)
bobik = Dog('Бобик', 13)

pets = [barsik, timosha, bobik]
print('Што кажуць беларускiя жывёлы:')
for pet in pets:
    pet.make_sound()
