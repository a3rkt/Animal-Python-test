class Pet:

    def __init__(self, name, age, alias, sound):
        self.name = name
        self.age = age
        self.alias = alias
        self.sound = sound

    def make_sound(self):
        print(f'{self.alias} {self.name} {self.sound}')
        return


class Dog(Pet):

    def __init__(self, name, age, alias='Пёс', sound='бреша'):
        self.name = name
        self.age = age
        self.alias = alias
        self.sound = sound


class Cat(Pet):

    def __init__(self, name, age, alias ='Кот', sound='мыу-мыу'):
        self.name = name
        self.age = age
        self.alias = alias
        self.sound = sound


barsik = Cat('Барсик', 10)
timosha = Cat('Тимоша', 5)
bobik = Dog('Бобик', 13)

pets = [barsik, timosha, bobik]
print('Што кажуць беларускiя жывёлы:')
for pet in pets:
    pet.make_sound()
